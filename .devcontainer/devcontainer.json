{
  "name": "BodhiApp",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools-extension-pack",
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "dcortes92.FreeMarker",
        "alefragnani.Bookmarks",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "dustypomerleau.rust-syntax",
        "tauri-apps.tauri-vscode",
        "k--kato.intellij-idea-keybindings",
        "ms-vscode.makefile-tools",
        "1YiB.rust-bundle"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "containerEnv": {
    "SHELL": "/bin/zsh"
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/BodhiApp",
  "workspaceMount": "source=bodhiapp-workspace,target=/workspaces/BodhiApp,type=volume",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.cache,target=/home/vscode/.cache,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/dotfiles,target=/home/vscode/dotfiles,type=bind"
  ],
  "postCreateCommand": "sh -c '/usr/local/bin/checkout.sh && ./.devcontainer/postCreateCommand.sh'"
}
